<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".findhospital">
    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/splashscreenbackground">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/otp_back_button"></ImageView>
            <TextView
                android:layout_width="match_parent"
                android:paddingLeft="25dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:text="Find Hospital"
                android:textColor="#ffffff"
                android:textSize="16sp"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end"
            android:layout_marginEnd="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="Location"
                android:layout_marginEnd="56dp"/>
            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                android:gravity="center"
                android:background="@drawable/spinner"
                android:padding="0dp"
                android:entries="@array/city"
                />
        </LinearLayout>
    </Toolbar>

    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/search"></EditText>
    </LinearLayout>
    <TableLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            >
            <ImageView
                android:id="@+id/imghospital"
                android:layout_width="match_parent"
                android:paddingLeft="10dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/hospital"
                android:layout_weight="1"></ImageView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txthospitalname"
                    android:layout_width="match_parent"
                    android:paddingTop="10dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textSize="18dp"
                    android:text="sadvichar Hospital"></TextView>
                <TextView
                    android:id="@+id/txthospitaltype"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:paddingTop="10dp"
                    android:textSize="15sp"
                    android:text="General"></TextView>
                <RatingBar
                    android:id="@+id/rating2"
                    android:layout_width="wrap_content"
                    android:paddingTop="10dp"
                    android:layout_height="wrap_content"
                    android:scaleX=".5"
                    android:outlineAmbientShadowColor="@color/splashscreenbackground"
                    android:scaleY=".5"
                    android:visibility="visible"
                    android:transformPivotX="0dp"
                    android:transformPivotY="0dp"
                    android:isIndicator="true"
                    android:max="5" />

            </LinearLayout>
        </TableRow>

    </TableLayout>

</LinearLayout>

